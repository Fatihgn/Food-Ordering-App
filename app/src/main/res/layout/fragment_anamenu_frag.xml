<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".anamenu_frag">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bc4">

        <TextView
            android:id="@+id/degistir"
            android:layout_width="222dp"
            android:layout_height="43dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="172dp"
            android:layout_marginTop="90dp"
            android:text="Kullanıcı Adı"
            android:textAlignment="center"
            android:textColor="#F6524B"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="91dp"
            android:text="Hoşgeldin "
            android:textColor="@color/gri"
            android:textSize="30sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/teslimat"
            android:layout_width="380dp"
            android:layout_height="197dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="146dp"
            android:background="@drawable/shape2">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="176dp"
                android:layout_height="69dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="61dp"
                android:text="Ücretsiz ve Hızlı Teslimat"
                android:textColor="#F6524B"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="193dp"
                android:layout_height="137dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/motor" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="379dp"
            android:layout_height="255dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="358dp">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/myrecyc2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="-2dp"
                android:layout_marginTop="38dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="3dp"
                android:text="Kampanyalar"
                android:textColor="@color/pembe2"
                android:textSize="25sp"
                android:textStyle="bold" />
        </RelativeLayout>


    </RelativeLayout>

</FrameLayout>
